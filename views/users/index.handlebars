<main>
    <h2>Welcome, {{username}}!</h2>
    <section>
            <h2>User Details</h2>
    <p>Username: {{user.username}}</p>
    <p>Major: {{user.major}}</p>
    <p>Courses Enrolled: {{user.coursesEnrolled}}</p>
    <p>Languages: {{user.languages}}</p>
    <p>Email: {{user.email}}</p>
    <p>Bio: {{user.bio}}</p>
    <p>Graduation Year: {{user.gradyear}}</p>

     <h3>Reviews:</h3>
    <ul>
        {{#each user.reviews}}
        <li>
            <p>Review: {{this.review}}</p>
            <p>Rating: {{this.rating}}</p>
        </li>
        {{/each}}
    </ul>
        
        <h3>Actions</h3>
        <ul>
           <li>
            <form action="/users/edit" method="get" id="editprofile">
            <h3 class="create"><button type="submit">Edit Profile</button></h3>
             </form>
             </li>
            <li>
           <form action="/users/delete" method="post" id="deleteprofile">
            <h3 class="create"><button type="submit">Delete Profile</button></h3>
             </form>
             </li>
        </ul>
    </section>
    <form action="/posts" method="get" id="goback">
    <h3 class="goback"><button type="submit">Go to Home</button></h3>
        </form>
    <section>
    </section>
</main>